@import '../lib/iconfont.wxss';
/**index.wxss**/
page{
	height: 100%;
}
.top{
	width: 100%;
	box-sizing: border-box;
	padding: 64rpx 0 50rpx 18rpx;
}
.back{
	font-size: 38rpx;
	color: white;
}
.title{
	font-size: 38rpx;
	color: white;
  margin-left: 31%;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
	box-shadow: 0px 1px 15px 0px rgba(255, 178, 178, 1); 
}

.userinfo-nickname {
  color: #000;
	font-size: 28rpx;
}

.content {
  height: 100%;
	width: 750rpx;
	background: url(https://qiutm-handtm.oss-cn-beijing.aliyuncs.com/images/lm-personCenter-bg.png)  no-repeat;
	background-size: 100%;
	display: flex;
	flex-direction: column;
	align-items: center;
} 
.rectangle{
	width: 719rpx;
	height: 263rpx;
	background-color:#fff; 
	border-radius: 8rpx;
	box-shadow: 0px 1rpx 21rpx 0px rgba(255, 0, 0, 0.51); 
	display: flex;
	align-items: center;
	justify-content: center;
}
.toBind{
	box-sizing: border-box;
	width: 719rpx;
	height: 80rpx;
	padding: 0 18rpx;
	margin-top: 30rpx;
	box-shadow: 0px 0px 15rpx 0px rgba(234, 234, 234, 0.51); 
	display: flex;
	align-items: center;
}
.text-style{
	margin-left: 16rpx;
	font-size: 28rpx;
	font-weight: bold;
}