@import '../lib/iconfont.wxss';

page {
  background-color: #f1f1f1;
}

.top {
  position: fixed;
  width: 750rpx;
  height: 340rpx;
  z-index: 99;
}

.bg {
  width: 750rpx;
  height: 340rpx;
}

.back-position {
  position: absolute;
  width: 100%;
  height: 88rpx;
  top: 40rpx;
  left: 18rpx;
  display: flex;
  align-items: center;
}

.back {
  font-size: 38rpx;
  color: white;
}

.description {
  position: absolute;
  top: 140rpx;
  left: 18rpx;
  width: 714rpx;
  height: 177rpx;
  border-radius: 10rpx;
  box-sizing: border-box;
  padding: 24rpx;
  background-color: white;
  box-shadow: 0 0 15rpx 0 rgba(234, 234, 234, 1);
}

.intCls {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.icon {
  width: 40rpx;
  height: 40rpx;
  border-radius: 10rpx;
  background: linear-gradient(#ff7979, #ffb1b1);
  font-size: 22rpx;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
}

.intCls_num {
  font-size: 34rpx;
  margin-left: 20rpx;
}

.intCls_name {
  font-size: 34rpx;
  margin-left: 14rpx;
}

.introduction {
  font-size: 26rpx;
}

.content {
  position: absolute;
  left: 0;
  top: 340rpx;
  box-sizing: border-box;
  padding: 0 18rpx;
}

.groupName-box {
  height: 84rpx;
  width: 714rpx;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  padding: 0 24rpx;
}

.groupName {
  font-size: 34rpx;
  color: black;
}

.page_bd {
  width: 714rpx;
  border-radius: 10rpx;
  box-shadow: 0 0 15rpx 0 rgba(234, 234, 234, 1);
  background: white;
  margin-bottom: 40rpx;
}

.body_head {
  display: flex;
  align-items: center;
  box-sizing: border-box;
  height: 88rpx;
  padding: 0 24rpx;
}

.secondIntCls {
  font-size: 28rpx;
  color: black;
}

.secondIntClsName {
  font-size: 28rpx;
  color: black;
  margin-left: 10rpx;
  width: 300rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.tmNum {
  font-size: 22rpx;
  color: #888;
  position: absolute;
  right: 66rpx;
}

.xia {
  transform: rotate(-90deg);
  color: #888;
  position: absolute;
  right: 30rpx;
}

.display_show {
  display: flex;
  height: 120rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  padding: 0 30rpx;
  justify-content: space-between;
}

.display_none {
  display: none;
}

.left {
  width: 500rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.leftUp {
  display: flex;
}

.similarFlag {
  color: white;
  width: 98rpx;
  font-size: 22rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 8rpx;
}

.tmName {
  font-size: 26rpx;
  color: black;
}

.leftDown {
  margin-top: 20rpx;
  font-size: 22rpx;
  color: #999;
}

.right {
  display: flex;
  flex-direction: column;
  justify-content: center;
	align-items: flex-end;
}

.tmStatus {
  font-size: 26rpx;
  color: black;
}

.rightDown {
  margin-top: 20rpx;
  font-size: 22rpx;
  color: #999;
}
